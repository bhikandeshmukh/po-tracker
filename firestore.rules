rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function getUserRole() {
      return getUserData().role;
    }
    
    function isSuperAdmin() {
      return isAuthenticated() && getUserRole() == 'super_admin';
    }
    
    function isAdmin() {
      return isAuthenticated() && (getUserRole() == 'admin' || getUserRole() == 'super_admin');
    }
    
    function isManager() {
      return isAuthenticated() && (getUserRole() in ['manager', 'admin', 'super_admin']);
    }
    
    function isActiveUser() {
      return isAuthenticated() && getUserData().isActive == true;
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAdmin();
      allow update: if isAdmin() || (isAuthenticated() && request.auth.uid == userId);
      allow delete: if isSuperAdmin();
    }
    
    // Vendors collection
    match /vendors/{vendorId} {
      allow read: if isAuthenticated();
      allow write: if isManager();
      
      // Warehouses sub-collection
      match /warehouses/{warehouseId} {
        allow read: if isAuthenticated();
        allow write: if isManager();
      }
    }
    
    // Transporters collection
    match /transporters/{transporterId} {
      allow read: if isAuthenticated();
      allow write: if isManager();
    }
    
    // Purchase Orders collection
    match /purchaseOrders/{poId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && isActiveUser();
      allow update: if isManager();
      allow delete: if isAdmin();
      
      // PO Items sub-collection
      match /items/{itemId} {
        allow read: if isAuthenticated();
        allow write: if isManager();
      }
    }
    
    // Shipments collection
    match /shipments/{shipmentId} {
      allow read: if isAuthenticated();
      allow write: if isManager();
      
      // Shipment Items sub-collection
      match /items/{itemId} {
        allow read: if isAuthenticated();
        allow write: if isManager();
      }
    }
    
    // Appointments collection
    match /appointments/{appointmentId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isActiveUser();
    }
    
    // Return Orders collection
    match /returnOrders/{returnId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && isActiveUser();
      allow update: if isManager();
      allow delete: if isAdmin();
      
      // Return Items sub-collection
      match /items/{itemId} {
        allow read: if isAuthenticated();
        allow write: if isManager();
      }
    }
    
    // PO Activity Logs collection
    match /poActivityLogs/{poId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isManager();
      allow delete: if isAdmin();
    }
    
    // Audit Logs collection
    match /auditLogs/{logId} {
      allow read: if isAdmin();
      allow create: if isAuthenticated();
      allow update, delete: if false; // Immutable
    }
    
    // Recent Activities collection
    match /recentActivities/{activityId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if false; // Immutable
    }
    
    // Dashboard Metrics collection
    match /dashboardMetrics/{document=**} {
      allow read: if isAuthenticated();
      allow write: if false; // Only backend can write
    }
    
    // Health check collection
    match /_health_check/{document=**} {
      allow read: if true; // Public for health checks
      allow write: if false;
    }
  }
}

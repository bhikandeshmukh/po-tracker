    "jspdf": "^3.0.4",
    "lucide-react": "^0.554.0",
    "next": "16.0.10",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "recharts": "^3.5.0",
    "supertest": "^7.1.4",
    "winston": "^3.18.3",
    "zod": "^4.1.12"

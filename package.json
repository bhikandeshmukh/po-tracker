{
  "name": "po-tracking-system",
  "version": "1.0.0",
  "description": "Purchase Order Tracking System with Firebase and Next.js",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
